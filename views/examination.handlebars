<div id="examination-popup"
    class=" hidden flex flex-row justify-center items-center top-0 bottom-0 left-0 right-0 fixed" style="background-color: rgba(255, 255, 255, 0.6);">
    <div class=" w-96 px-4 py-4 bg-yellow-200 rounded-xl">
        <p class="text-center text-lg font-semibold">Are you sure you want to submit the examination sheet ?</p>
        <p class="text-center text-sm mt-2">Your test record will be stored securely for previous access</p>
        <div class="flex flex-row justify-evenly mt-2">
            <button class=" bg-yellow-100 px-5 py-1 rounded-lg hover:shadow-lg font-semibold
            " id="exam-submit-no">No</button>
            <button class="bg-yellow-400 px-5 py-1 rounded-lg hover:shadow-lg font-semibold"
                id="exam-submit-yes">Yes</button>
        </div>
    </div>
</div>


<div id="modal" class="fixed inset-0 flex items-center justify-center hidden bg-black bg-opacity-50">
    <div class="w-2/3 p-4 bg-white rounded-lg shadow-lg">
      <div class="flex justify-end mb-4">
        <button id="closeModal" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>
        <div class="background relative flex items-center justify-center">
            <img src="resultPopup.jpg" alt="" class="h-[200px] w-[200px]">
            <div id="score" class=" z-30 flex flex-col items-center justify-center absolute text-white font-medium transform -translate-x-1/2 -translate-y-1/2 gap-4 top-1/2 left-1/2">
                <p class="text-lg md:text-2xl">Your Score</p>
                <p class="text-4xl md:text-6xl">7</p>
            </div>
        </div>
      <div class="text-right">
        <button id="closeBtn" class="px-4 py-2 font-semibold text-white rounded bg-amber-400">
          Show Details
        </button>
      </div>
    </div>
  </div>




<div class="bg-yellow-50 w-11/12 md:w-10/12 px-1 md:px-8 py-6">
    <div id="user-details" class=" mb-8 text-lg font-semibold">
        <p>Username : <span class="text-xl text-yellow-600" style="text-shadow: 0.1px 0.1px 0.1px black;">Arkabrata
                Chandra</span></p>
        <p>Question Level : <span class="text-xl text-yellow-600"
                style="text-shadow: 0.1px 0.1px 0.1px black;">Easy</span></p>
        <p>Domain Choosen : <span class="text-xl text-yellow-600"
                style="text-shadow: 0.1px 0.1px 0.1px black;">Technical</span></p>
    </div>
    <div id="score-board" class="mb-5">
        <div
            class="flex flex-col sm:flex-row border-yellow-400 border-4 px-3 py-2 justify-between items-center mb-3 font-semibold text-md">
            <div>Total Questions : 10</div>
            <div>10 x 1 = 10</div>
        </div>
        <div>
            <p class="text-sm">Every Question Carries 1 marks and all are single answer type questions</p>
        </div>
    </div>
    <form id="questions">
        {{#each quizdata}}
        <div class="mb-5 text-lg question">
            <p class="font-semibold mb-2"><span>{{@index}}. </span>{{this.qname}}</p>
            {{#each this.options}}
            <input type="radio" name="{{../qname}}" value={{this}}>
            <label for="label">{{this}}</label><br>
            {{/each}}
        </div>
        {{/each}}
        <p class="mb-4">Always check all answer carefully before submission</p>
        <div id="btn" class="flex flex-row justify-center items-center gap-10">
            <button type="reset" class="bg-yellow-200 px-5 py-2 shadow-lg"><i
                    class="fa-solid fa-hourglass-start mr-1"></i>Reset</button>
            <button type="submit" class="bg-yellow-400 px-5 py-2 shadow-lg" id="exam-submit"><i
                    class="fa-solid fa-hourglass-start mr-1"></i>Submit</button>
        </div>
    </form>
</div>