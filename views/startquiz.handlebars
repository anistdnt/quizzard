
<form action="/startquiz" method="post" class="bg-yellow-100 px-8 py-10 rounded-xl w-96 shadow-xl shadow-yellow-600 mx-4">
    <div>
        <label for="username" class="font-semibold text-lg text-yellow-600 mb-5"
            style="text-shadow: 0.1px 0.1px 0.2px black;">User Name</label><br>
        <input type="text" name="username" id="name" placeholder="Enter your name here"
            class=" px-5 py-2 my-2 w-full rounded-md focus:outline-yellow-500">
    </div>
    <div>
        <label for="topic" class="font-semibold text-lg text-yellow-600 mb-5"
            style="text-shadow: 0.1px 0.1px 0.2px black;">Topic</label><br>
        <select name="domain" id="domain" class=" px-5 py-2 my-2 w-full rounded-md">
            <option value="">Select</option>
            <option value="aptitude">Aptitude</option>
            <option value="technical">Technical</option>
            <option value="political and history">Political and History</option>
            <option value="geography">Geography</option>
        </select>
    </div>
    <div>
        <label for="mode" class="font-semibold text-lg text-yellow-600 mb-5"
            style="text-shadow: 0.1px 0.1px 0.2px black;">Mode</label><br>
        <select name="qtype" id="qtype" class=" px-5 py-2 mt-2 w-full rounded-md">
            <option value="">Select</option>
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>
    </div>
    <div class="flex flex-col sm:flex-row justify-evenly mt-8">
        <button class=" bg-yellow-200 px-5 py-2 shadow-lg hover:scale-105"><i class="fa-solid fa-backward mr-1"></i><a
                href="/">Previous</a></button>
        <button type="submit" class="bg-yellow-400 px-5 py-2 shadow-lg hover:scale-105"><i
                class="fa-solid fa-hourglass-start mr-1"></i>Start Quiz</button>
    </div>
</form>