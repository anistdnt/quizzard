<form action="/login" method="post" class="bg-yellow-100 px-8 py-10 rounded-xl w-96 shadow-xl shadow-yellow-600 mx-4">
    <div>
        <label for="username" class="font-semibold text-lg text-yellow-600 mb-5"
            style="text-shadow: 0.1px 0.1px 0.2px black;">Name</label><br>
        <input type="text" name="username" id="name" placeholder="Enter your name"
            class=" px-5 py-2 my-2 w-full rounded-md focus:outline-yellow-500">
    </div>
    <div>
        <label for="userpassword" class="font-semibold text-lg text-yellow-600 mb-5"
            style="text-shadow: 0.1px 0.1px 0.2px black;">Password</label><br>
        <div class="relative">
            <input type="password" name="userpassword" id="password" placeholder="enter password"
                class=" px-5 py-2 my-2 w-full rounded-md shadow appearance-none border leading-tight focus:outline-none focus:shadow-outline pr-10">
            <div class="absolute inset-y-0 right-0 flex items-center px-2">
                <i id="togglePassword" class="fas fa-eye cursor-pointer text-gray-700"></i>
            </div>
        </div>
    </div>
    <div class="flex gap-4 flex-col sm:flex-row justify-center mt-8">
        <button type="submit"
            class="bg-yellow-400 w-full px-5 py-2 shadow-lg text-white font-medium hover:scale-105">Login</button>
    </div>
    <p class="text-yellow-600 mt-5">Don't have an account? <a href="/signup" class="font-medium cursor-pointer">Sign
            Up</a></p>
</form>